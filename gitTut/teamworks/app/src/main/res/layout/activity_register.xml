<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_header"
        android:background="@color/green_header">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="@dimen/height_header"
            android:layout_height="@dimen/height_header">

            <ImageButton
                android:background="@drawable/nav_back"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_toRightOf="@+id/rlBack"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/register_"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlHeader1"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/green_header" />

                <RelativeLayout
                    android:id="@+id/rlLogo"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:id="@+id/imgWhite"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:layout_margin="2dp"
                        android:id="@+id/img_profile_pic"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="15sp"
                        android:maxLength="1"
                        android:textColor="@color/green_header" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/rlHeader1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/rl_fname"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_fname"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/fname"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:maxLength="50"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                        android:layout_toRightOf="@+id/tv_fname"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/et_fname"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_lname"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_fname"
                    android:layout_marginTop="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_lname"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lname"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:maxLength="50"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                        android:layout_toRightOf="@+id/tv_lname"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/et_lname"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_email"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_lname"
                    android:layout_marginTop="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/email_id"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:layout_toRightOf="@+id/tvEmail"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/et_email"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_mobile"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_email"
                    android:layout_marginTop="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/client_mobile"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:layout_toRightOf="@+id/tv_mobile"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/et_mobile"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:inputType="number"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlPermAddress"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_mobile"
                    android:layout_marginTop="20dp"
                    android:layout_height="50dp">

                    <TextView
                        android:textColor="@color/green_header"
                        android:textSize="15sp"
                        android:text="@string/permanent_address"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:id="@+id/rlLocation"
                        android:layout_width="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="match_parent">

                        <ImageButton
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:clickable="false"
                            android:background="@drawable/pick_position"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pincode"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rlPermAddress"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp">


                    <TextView
                        android:id="@+id/tv_pincode"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/pincode"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:layout_toRightOf="@+id/tv_pincode"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/et_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_permadd1"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_pincode"
                    android:layout_marginTop="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_permadd1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/add1"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_permadd1"
                        android:id="@+id/et_permadd1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:inputType="textCapSentences"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_permadd2"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_permadd1"
                    android:layout_marginTop="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_permadd2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/add2"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:textSize="15sp"
                        android:layout_toRightOf="@+id/tv_permadd2"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/et_permadd2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_city"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_permadd2"
                    android:layout_marginTop="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:maxLength="50"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_city"
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_state"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_city"
                    android:layout_marginTop="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/state"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:maxLength="50"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                        android:textSize="15sp"
                        android:layout_toRightOf="@+id/tv_state"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/et_state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_country"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_state"
                    android:layout_marginTop="10dp"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/country"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:layout_centerVertical="true" />

                    <EditText
                        android:maxLength="50"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_country"
                        android:id="@+id/et_country"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_box_bg"
                        android:layout_alignParentBottom="true" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_below="@+id/rl_country"
                    android:id="@+id/rlSave"
                    android:layout_margin="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:background="@drawable/rectangle_blue"
                    android:layout_height="50dp">

                    <TextView
                        android:textColor="@color/white"
                        android:text="@string/save_update"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_below="@+id/rlSave"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
