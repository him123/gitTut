<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:minHeight="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp">


        <RelativeLayout
            android:id="@+id/rlLogo"

            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp">


            <ImageView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:layout_margin="2dp"
                android:id="@+id/imgLogo"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/tvContactImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:maxLength="1"
                android:textColor="@color/green_header" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rlLogo"
            android:layout_marginLeft="10dp"
            android:id="@+id/relativeLeft"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeName"
                android:layout_toLeftOf="@+id/relativeRight">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ftdfgdghdrghery"
                    android:singleLine="true"
                    android:textSize="@dimen/textmedium"
                    android:gravity="center"
                    android:id="@+id/tvUserName" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvUserName"
                        android:id="@+id/relativeTimes">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="3dp"
                            android:gravity="center_vertical"
                            android:id="@+id/linearNewTimes">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="16:30"
                                android:singleLine="true"
                                android:textSize="13sp"
                                android:id="@+id/tvNewTimeIn" />


                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="16:30"
                                android:singleLine="true"
                                android:textSize="13sp"
                                android:layout_marginLeft="1dp"
                                android:id="@+id/tvNewTimeOut" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:id="@+id/tvAttendanceType"
                            android:text="hgffgf"
                            android:visibility="gone"
                            android:textColor="@color/gray"
                            android:gravity="center_vertical" />

                    </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="late by 2 mins"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/red"
                    android:layout_below="@+id/relativeTimes"
                    android:id="@+id/tvAttendanceStatus" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeRight"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="12 Oct"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/tvDate" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/relativeUpdate"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rectangle_white"
                    android:layout_below="@+id/tvDate">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/update"
                        android:id="@+id/btnUpdate"
                        android:gravity="right"
                        android:textSize="@dimen/textmedium"
                        android:focusable="false"
                        android:clickable="false"
                        android:background="@color/transparent"
                        android:textColor="@color/green_header"/>

                </RelativeLayout>


            </RelativeLayout>



        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
