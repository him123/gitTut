<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/rl_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_bottom"
        android:padding="10dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_working_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/working_days"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_working_days"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_working_days"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="7">


                <RelativeLayout
                    android:id="@+id/rl_mon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green_box_bg">

                    <TextView
                        android:id="@+id/tvMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/mon"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_tue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/green_box_bg">

                    <TextView
                        android:id="@+id/tvTue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/tue"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_wed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/green_box_bg">

                    <TextView
                        android:id="@+id/tvWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/wed"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_thu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/green_box_bg">

                    <TextView
                        android:id="@+id/tvThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/thu"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_fri"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/green_box_bg">

                    <TextView
                        android:id="@+id/tvFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/fri"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/green_box_bg">

                    <TextView
                        android:id="@+id/tvSat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/sat"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_sun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/green_box_bg">

                    <TextView
                        android:id="@+id/tvSun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/sun"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_working_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_working_days"
                android:layout_marginTop="20dp"
                android:text="@string/working_hours"
                android:textColor="@color/gray" />

            <LinearLayout
                android:id="@+id/rlTime"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@+id/tv_working_hours"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rl_start_time_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/green_box_bg" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/starting_from"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textmedium" />

                    <RelativeLayout
                        android:id="@+id/rl_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/textmedium" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_end_time_"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/green_box_bg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/green_box_bg" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/ends_by"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textmedium" />

                    <RelativeLayout
                        android:id="@+id/rl_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/textmedium" />

                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_Tracking_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlTime"
                android:layout_marginTop="20dp"
                android:text="@string/tracking_time"
                android:textColor="@color/gray" />

            <LinearLayout
                android:id="@+id/rlTrackingTime"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@+id/tv_Tracking_time"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rl_start_time_tracking_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/green_box_bg" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/starting_from"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textmedium" />

                    <RelativeLayout
                        android:id="@+id/rl_start_time_tracking"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv3"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_start_time_tracking"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:textSize="@dimen/textmedium" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_end_time_tracking_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/green_box_bg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/green_box_bg" />

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/ends_by"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textmedium" />

                    <RelativeLayout
                        android:id="@+id/rl_end_time_tracking"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv4"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tv_end_time_tracking"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/textmedium" />

                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlMinimumDailyWorkingHrs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/rlTrackingTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_minimum_daily_working_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/etMinimumHours"
                    android:text="@string/minimum_daily_working_hrs"
                    android:textColor="@color/gray" />

                <EditText
                    android:id="@+id/etMinimumMinutes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:maxLength="2"
                    android:textSize="@dimen/textmedium"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/etMinimumMinutes"
                    android:layout_toStartOf="@+id/etMinimumMinutes"
                    android:gravity="center"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/etMinimumHours"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/textView"
                    android:layout_toStartOf="@+id/textView"
                    android:textSize="@dimen/textmedium"
                    android:maxLength="2"
                    android:ems="10"
                    android:inputType="number" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAverageWorkingHrs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/rlMinimumDailyWorkingHrs"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_average_working_working_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/etAVGHours"
                    android:text="@string/average_working_working_hour"
                    android:textColor="@color/gray" />

                <EditText
                    android:id="@+id/etAVGMinutes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:ems="10"
                    android:maxLength="2"
                    android:textSize="@dimen/textmedium"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/etAVGMinutes"
                    android:layout_toStartOf="@+id/etAVGMinutes"
                    android:gravity="center"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/etAVGHours"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/textView1"
                    android:layout_toStartOf="@+id/textView1"
                    android:ems="10"
                    android:maxLength="2"
                    android:textSize="@dimen/textmedium"
                    android:inputType="number" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_saturday_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/rlAverageWorkingHrs">

                <RelativeLayout
                    android:id="@+id/rlSaturdayWorkingPollicy"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/saturday_working_policy"
                        android:textColor="@color/gray"
                        android:textSize="15sp" />

                    <ToggleButton
                        android:id="@+id/bt_saturday_policy_enabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_saturdays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_below="@+id/rlSaturdayWorkingPollicy">

                    <RelativeLayout
                        android:id="@+id/rlSaturday1"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <CheckBox
                            android:id="@+id/cbSaturday1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />


                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/switchSaturday1"
                            android:layout_toRightOf="@+id/cbSaturday1"
                            android:text="@string/saturday1"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/switchSaturday1"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/bg_slave_option">

                            <TextView
                                android:id="@+id/txtSat1H"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:background="@color/green_btn"
                                android:gravity="center"
                                android:text="HALF"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/txtSat1F"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:layout_toRightOf="@+id/txtSat1H"
                                android:background="@color/green_btn"
                                android:gravity="center"
                                android:text="FULL"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlSaturday2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/rlSaturday1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <CheckBox
                            android:id="@+id/cbSaturday2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/switchSaturday2"
                            android:layout_toRightOf="@+id/cbSaturday2"
                            android:text="@string/saturday2"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/switchSaturday2"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/bg_slave_option">

                            <TextView
                                android:id="@+id/txtSat2H"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:background="@color/green_btn"
                                android:gravity="center"
                                android:text="HALF"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/txtSat2F"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:layout_toRightOf="@+id/txtSat2H"
                                android:background="@color/green_btn"
                                android:gravity="center"
                                android:text="FULL"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlSaturday3"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/rlSaturday2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <CheckBox
                            android:id="@+id/cbSaturday3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/switchSaturday3"
                            android:layout_toRightOf="@+id/cbSaturday3"
                            android:text="@string/saturday3"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/switchSaturday3"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/bg_slave_option">

                            <TextView
                                android:id="@+id/txtSat3H"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:background="@color/green_btn"
                                android:gravity="center"
                                android:text="HALF"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/txtSat3F"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:layout_toRightOf="@+id/txtSat3H"
                                android:background="@color/green_btn"
                                android:gravity="center"
                                android:text="FULL"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlSaturday4"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/rlSaturday3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp">

                        <CheckBox
                            android:id="@+id/cbSaturday4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/switchSaturday4"
                            android:layout_toRightOf="@+id/cbSaturday4"
                            android:text="@string/saturday4"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/switchSaturday4"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/bg_slave_option">

                            <TextView
                                android:id="@+id/txtSat4H"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:background="@color/green_btn"
                                android:gravity="center"
                                android:text="HALF"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:visibility="invisible" />

                            <TextView
                                android:id="@+id/txtSat4F"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:layout_toRightOf="@+id/txtSat4H"
                                android:background="@color/green_btn"
                                android:gravity="center"
                                android:text="FULL"
                                android:textColor="@color/white"
                                android:textSize="10sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlSaturday5"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@+id/rlSaturday4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp">

                        <CheckBox
                            android:id="@+id/cbSaturday5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/switchSaturday5"
                            android:layout_toRightOf="@+id/cbSaturday5"
                            android:text="@string/saturday5"
                            android:textColor="@color/gray"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/switchSaturday5"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/bg_slave_option">

                            <TextView
                                android:id="@+id/txtSat5H"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:background="@color/green_btn"
