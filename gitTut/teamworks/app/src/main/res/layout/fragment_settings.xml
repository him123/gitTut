<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlHeader1"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/green_header" />

                <RelativeLayout
                    android:id="@+id/rlLogo"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:id="@+id/imgWhite"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:layout_margin="2dp"
                        android:id="@+id/img_profile_small"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="15sp"
                        android:maxLength="1"
                        android:textColor="@color/green_header" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rlHeader1"
                android:singleLine="true"
                android:textSize="@dimen/textLarge"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvRole"
                android:layout_below="@+id/tvUserName"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/textmedium"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvRole"
                android:background="@color/green_header"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="5dp" />

            <ListView
                android:id="@+id/listViewSettings"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/listViewSettings" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
