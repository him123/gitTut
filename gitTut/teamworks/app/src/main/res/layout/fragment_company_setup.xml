<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/rlHeader1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/green_header" />

                    <RelativeLayout
                        android:id="@+id/rlLogo"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <ImageView
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:clickable="false"
                            android:id="@+id/imgWhite"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:clickable="false"
                            android:layout_margin="2dp"
                            android:id="@+id/img_logo"
                            android:layout_centerInParent="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="15sp"
                            android:maxLength="1"
                            android:textColor="@color/green_header" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_profile"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <ImageView
                        android:alpha="0.2"
                        android:id="@+id/img_profile_big"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tv_profile_name"
                            android:layout_marginLeft="20sp"
                            android:textSize="20sp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/green_header" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_below="@+id/rlHeader1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/rl_company_name"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/tvCompayName"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/client_name"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tvCompayName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:inputType="textCapSentences"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:id="@+id/etCompayName" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_company_mobile"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_company_name"
                        android:layout_marginTop="10dp"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/tvCompanyMobile"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/client_mobile"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tvCompanyMobile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:maxLength="10"
                            android:inputType="number"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:id="@+id/etCompanyMobile" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_company_landline"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_company_mobile"
                        android:layout_marginTop="10dp"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/tvCompanyLandline"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/client_landline"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:textSize="15sp"
                            android:layout_toRightOf="@+id/tvCompanyLandline"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:maxLength="15"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:id="@+id/etCompanyLandline" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_company_email"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_company_landline"
                        android:layout_marginTop="10dp"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/tvCompanyEmail"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/client_email"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tvCompanyEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"
                            android:paddingRight="10dp"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            android:id="@+id/etCompanyEmail" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_company_description"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_company_email"
                        android:layout_marginTop="10dp"
                        android:gravity="top"
                        android:layout_height="100dp">

                        <TextView
                            android:id="@+id/tvCompanyDescription"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/client_desc"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tvCompanyDescription"
                            android:id="@+id/etCompanyDescription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:inputType="textCapSentences"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_company_type"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_company_description"
                        android:layout_marginTop="10dp"
                        android:layout_height="60dp">


                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/client_type"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <Spinner
                            android:layout_toRightOf="@+id/tvType"
                            android:id="@+id/spinnerCompanyType"
                            android:prompt="@string/company_type"
                            android:entries="@array/company_type_array"
                            style="@android:style/Widget.Holo.Light.Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="20dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rlPermAddress"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_company_type"
                        android:layout_marginTop="20dp"
                        android:layout_height="50dp">

                        <TextView
                            android:textColor="@color/green_header"
                            android:textSize="15sp"
                            android:text="@string/permanent_address"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <RelativeLayout
                            android:id="@+id/rlLocation"
                            android:layout_width="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:background="@drawable/pick_position"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_pincode"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rlPermAddress"
                        android:layout_marginTop="10dp"
                        android:layout_height="50dp">


                        <TextView
                            android:id="@+id/tv_pincode"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/pincode"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:layout_toRightOf="@+id/tv_pincode"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/et_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_permadd1"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_pincode"
                        android:layout_marginTop="10dp"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/tv_permadd1"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/add1"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tv_permadd1"
                            android:id="@+id/et_permadd1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:inputType="textCapSentences"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_permadd2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_permadd1"
                        android:layout_marginTop="10dp"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/tv_permadd2"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/add2"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:textSize="15sp"
                            android:layout_toRightOf="@+id/tv_permadd2"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/et_permadd2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:inputType="textCapSentences"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_city"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_permadd2"
                        android:layout_marginTop="10dp"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/city"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:maxLength="50"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tv_city"
                            android:id="@+id/et_city"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:inputType="textCapSentences"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_state"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_city"
                        android:layout_marginTop="10dp"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/tv_state"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/state"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:maxLength="50"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                            android:textSize="15sp"
                            android:layout_toRightOf="@+id/tv_state"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/et_state"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:inputType="textCapSentences"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_country"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_state"
                        android:layout_marginTop="10dp"
                        android:layout_height="35dp">

                        <TextView
                            android:id="@+id/tv_country"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/country"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:layout_centerVertical="true" />

                        <EditText
                            android:maxLength="50"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tv_country"
                            android:id="@+id/et_country"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:inputType="textCapSentences"
                            android:singleLine="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/green_box_bg"
                            android:layout_alignParentBottom="true" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_lat_lng"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/rl_country"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:minHeight="35dp">

                        <TextView
                            android:id="@+id/tvLatLng"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/tvLatLng"
                            android:layout_alignParentBottom="true"
                            android:background="@color/green_box_bg" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/rl_lat_lng"
                        android:id="@+id/rlUpdateCompany"
                        android:layout_margin="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:background="@drawable/rectangle_blue"
                        android:layout_height="50dp">

                        <TextView
                            android:textColor="@color/white"
                            android:text="@string/save_update"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/rlUpdateCompany" />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
